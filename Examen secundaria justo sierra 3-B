<script>
  const btn = document.getElementById('btnExamen');
  const screamerDiv = document.getElementById('screamer');
  const audio = document.getElementById('audioScreamer');

  btn.addEventListener('click', () => {
    screamerDiv.style.display = 'flex';
    audio.play();

    // Opcional: ocultar el screamer despuÃ©s de 5 segundos
    setTimeout(() => {
      screamerDiv.style.display = 'none';
      audio.pause();
      audio.currentTime = 0;
    }, 5000);
  });
</script>

